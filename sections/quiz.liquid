{{ 'section-quiz.css' | asset_url | stylesheet_tag }}
<script src="{{ 'quiz.js' | asset_url }}" defer="defer"></script>
<div class="quiz page-width">
        <div class="intro">
            <h1>Find the perfect equipment</h1>
            <p>The best riding experience starts with best equipment. <br> 
            find our recommendation by following this short quiz!</p>
            <button class="button intro-btn">Start</button>
        </div>
        <div id="question-1" class="hidden-question">
            <h2>1) What are you looking for?</h2>
            <div class="label-container">
                <input type="radio" id="bike" name="looking_for" value="bike">
                <label for="bike">
                    <img src="{{ 'quiz-bike.jpg' | file_url }}">
                    <span>
                        A new bike
                    </span>
                </label>
                <input type="radio" id="equipment" name="looking_for" value="equipment">
                <label for="equipment">
                    <img src="{{ 'quiz-equipment.jpg' | file_url }}">
                    <span>
                        Equipment
                    </span>
                </label>
            </div>
            <button class="button next-btn">Next →</button>
        </div>
        <div id="question-2" class="hidden-question">
            <h2>2) What kind of Bike are you looking for?</h2>
            <div class="label-container">
                <input type="radio" id="track" name="bike_type" value="track">
                <label for="track">
                    <img src="{{ 'quiz-track.jpg' | file_url }}">
                    <span>
                     Track Bike
                    </span>
                </label>
                <input type="radio" id="mountain" name="bike_type" value="mountain">
                <label for="mountain">
                    <img src="{{ 'quiz-mountain.jpg' | file_url }}">
                    <span>
                     Mountain Bike
                    </span>
                </label>
            </div>
            <button class="button next-btn">Next →</button>
        </div>
        <div id="question-3" class="hidden-question">
            <h2>3)What's your preferred color?</h2>
            <div class="label-container">
                <input type="radio" id="black" name="color" value="Black">
                <label for="black">
                    {{ all_products['black-mountain-bike'] | image_url: width: 300 | image_tag }}
                    <span>
                     Black
                    </span>
                </label>
                <input type="radio" id="Blue" name="color" value="Blue">
                <label for="Blue">
                    {{ all_products['blue-mountain-bike'] | image_url: width: 300 | image_tag }}
                <span>
                    Blue
                </span>
                </label>
                <input type="radio" id="Yellow" name="color" value="Yellow">
                <label for="Yellow">
                    {{ all_products['yellow-mountain-bike'] | image_url: width: 300 | image_tag }}
                    <span>
                    Yellow
                </span></label>
                <input type="radio" id="Red" name="color" value="Red">
                <label for="Red">
                    {{ all_products['red-mountain-bike'] | image_url: width: 300 | image_tag }}
                   <span>
                    Red
                </span>
                </label>
            </div>
            <button class="button next-btn">Next →</button>
        </div>
        <div id="result">
            <h2>Thanks for completing the quiz! <br> Here is the right product for you:</h2>
            <a href ="#" class="button">See product</a>
        </div>
        <div id="result-equipment">
            <h2>It seems that you are looking for bike equipment</h2>
            <a href ="/collections/helmets" class="button">See equipments</a>
        </div>
</div>
